	CXX = g++
CXXOPTS = -std=c++11
#all: executable
#rebuild: clean all
debug: CXXFLAGS += -g
debug: executable
test: TestWin2.o 
	$(CXX) $(CXXOPTS) -I/usr/include/cairo -I/usr/include/glib-2.0-I/usr/lib/x86_64-linux-gnu/glib-2.0/include -I/usr/include/pixman-1-I/usr/include/freetype2 -I/usr/include/libpng12 -I/usr/include/freetype2-I/usr/include/cairo -I/usr/include/glib-2.0 -I/usr/lib/x86_64-linux-gnu/glib-2.0/include -I/usr/include/pixman-1 -I/usr/include/freetype2-I/usr/include/libpng12 -g -O2 -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE-D_THREAD_SAFE -D_REENTRANT -std=c++11 -o 'TestWin2' 'TestWin2.o' -Wl,-Bsymbolic-functions -lfltk -lX11 
TestWin2.o:
	$(CXX) -c $(CXXOPTS) $(fltk-config --cxxflags) TestWin2.cpp
Controller: Controller.o 
	$(CXX) $(CXXOPTS) -I/usr/include/cairo -I/usr/include/glib-2.0-I/usr/lib/x86_64-linux-gnu/glib-2.0/include -I/usr/include/pixman-1-I/usr/include/freetype2 -I/usr/include/libpng12 -I/usr/include/freetype2-I/usr/include/cairo -I/usr/include/glib-2.0 -I/usr/lib/x86_64-linux-gnu/glib-2.0/include -I/usr/include/pixman-1 -I/usr/include/freetype2-I/usr/include/libpng12 -g -O2 -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE-D_THREAD_SAFE -D_REENTRANT -std=c++11 -o 'Controller' 'Controller.o' -Wl,-Bsymbolic-functions -lfltk -lX11 
Controller.o:
